{
  "version": 2,
  "builds": [
    {
      "src": "package.json", 
      "use": "@vercel/static-build", 
      "config": {
        "buildCommand": "npx vite build", 
        "distDir": "dist/public"
      }
    },
    {
      "src": "api/**/*.ts", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "handle": "filesystem" }, 
    { "src": "/.*", "dest": "/index.html" }
  ]
}